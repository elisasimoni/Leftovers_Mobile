<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    app:cardCornerRadius="15dp"
    android:layout_margin="10dp">
    <ImageView
        android:id="@+id/relativeBackground"
        android:layout_width="553dp"
        android:layout_height="704dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/generic_food"
        android:backgroundTint="@color/gray"
        android:contentDescription="@string/backgroundcardtype"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="610dp"
                android:layout_gravity="top"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:text="@string/titolo"
                    android:fontFamily="@font/alata"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:text="@string/servants"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="0dp" />
                    <TextView
                        android:id="@+id/servants"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:fontFamily="@font/alata"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginStart="-10dp"
 />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/black"
                        android:text="@string/kcal"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/kcal"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:fontFamily="@font/alata"

                        android:layout_marginStart="-10dp"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/ing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ingredients"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/black"/>
                </ScrollView>

                <LinearLayout
                    android:id="@+id/ingredientsList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    >

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/instruction"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:fontFamily="@font/alata"
                    android:textColor="@color/black"
                    />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="420dp">

                    <TextView
                        android:id="@+id/instruction"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/alata"
                        android:text="@string/instruction"
                        android:textColor="@color/black"
                        tools:ignore="ScrollViewSize" />
                </ScrollView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate_this_recipe"
                    android:fontFamily="@font/alata"
                    android:textStyle="bold"
                    android:textSize="20sp"

                    />
                <me.zhanghai.android.materialratingbar.MaterialRatingBar
                    android:id="@+id/ratingBar"
                    style="@style/Widget.MaterialRatingBar.RatingBar"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="15dp"
                    android:progressTint="@color/purple_700" />
            </LinearLayout>


</com.google.android.material.card.MaterialCardView>